<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>New Entry</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.0/css/bulma.min.css"
    />
    <script src="https://www.jsdelivr.com/package/npm/bulma"></script>
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
    <!-- <link rel="stylesheet" href="css/debug.css" /> -->

    <style>
      .hide {
        visibility: hidden;
      }
      body {
        width: 80%;
        margin: 0px auto;
      }

      form {
        width: 80%;
        margin: 0px auto;
      }
      .field {
        width: 100%;
        margin: 0px auto;
      }
      h1 {
        font-weight: 700;
        margin: 10px auto;
      }
      .input {
        width: 90%;
        margin: 0px auto;
      }
      img {
        margin: 0px auto;
      }
      .hero-head a {
        color: white;
        font-weight: 700;
      }

      .hero-head {
        width: 75%;
        margin: 0px auto 20px auto;
      }

      .center {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .container {
        width: 70%;
      }

      @media only screen and (max-width: 480px) {
        body {
          width: 100% !important;
          margin: 0px;
          padding: 0px;
        }
        form {
          width: 95% !important;
        }

        .hero-head {
          width: 100%;
          margin: 0px auto 20px auto;
        }
        .hero,
        .container {
          width: 100%;
        }
      }
    </style>
  </head>

  <body>
    <section class="hero">
      <div class="hero-body">
        <figure class="image center">
          <img src="/images/jurnalfy_single.png" style="max-width: 575px;" />
        </figure>

        <div class="hero-head has-background-success has-text-white">
          <div class="columns is-mobile is-marginless">
            <div class="column center">
              <i class="fas fa-2x fa-door-open"></i>&nbsp;&nbsp;
              <p><a href="/home">Home</a></p>
            </div>
          </div>
        </div>

        <div class="container has-background-light">
          <form
            action="/newThought"
            method="POST"
            id="newThought"
            enctype="multipart/form-data"
          >
            <div class="center">
              <h1>HAVE A THOUGHT? JOT IT DOWN</h1>
            </div>
            <div class="field">
              <label for="date">Date:</label>
              <p class="control has-icons-left has-icons-right">
                <input
                  type="text"
                  name="date"
                  placeholder="Date"
                  class="input"
                />
                <span class="icon is-small is-left">
                  <i class="far fa-calendar-alt"></i>
                </span>
              </p>
            </div>

            <div class="field">
              <label for="thought">Thought:</label>

              <p class="control has-icons-left">
                <textarea
                  form="newThought"
                  name="thought"
                  class="textarea"
                  rows="10"
                ></textarea>
                <span class="icon is-small is-left">
                  <i class="fas fa-pen-nib"></i>
                </span>
              </p>
            </div>

            <div class="field">
              <label for="category">Destination:</label>
              <p class="control has-icons-left has-icons-right">
                <input
                  type="text"
                  name="destination"
                  placeholder="Where are you?"
                  class="input"
                />
                <span class="icon is-small is-left">
                  <i class="fas fa-chevron-circle-down"></i>
                </span>
              </p>
            </div>

            <div class="field">
              <label for="category">Location</label>
              <p class="control has-icons-left has-icons-right">
                <input
                  type="text"
                  name="location"
                  id="location"
                  placeholder="category"
                  class="input"
                />

                <span class="icon is-small is-left">
                  <i class="fas fa-map-pin"></i>
                </span>
              </p>
            </div>

            <div class="hide">
              <input type="text" name="userName" />
            </div>

            <div class="field">
              <label for="category">Image:</label>
              <input class="input" type="file" name="image" />
            </div>
            <div class="field">
              <p class="control">
                <button class="button is-success">
                  Add Entry
                </button>
              </p>
            </div>
          </form>
          <br />
          <br />
        </div>
      </div>
    </section>

    <br />
  </body>
</html>
