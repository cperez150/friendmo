<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>jurnalfy</title>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
    <script type="text/javascript"></script>
    <script
      async
      src="https://platform.twitter.com/widgets.js"
      charset="utf-8"
    ></script>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="styles/helpers.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.0/css/bulma.min.css"
    />
    <script src="https://www.jsdelivr.com/package/npm/bulma"></script>

    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
    <!-- <link rel="stylesheet" href="css/debug.css" /> -->
    <style>
      @import url("https://fonts.googleapis.com/css?family=Roboto:400,500,700,900&display=swap");

      h1 {
        font-family: "Roboto", sans-serif;
      }

      .center {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .parent {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .child1, .child2 {
        width: 50%
      }


      .has-text-dark {
        font-family: "Roboto", sans-serif;
        font-weight: 600;
      }

      iframe {
        float: right; 
      }

      .hero-head {
        font-family: "Roboto", sans-serif;
        font-weight: 600;
        font-size: 18px;
        margin: 10px auto -10px auto;
        width: 85%
      }

      .hero-head a{
        color: white; 
      }

      img {
        margin: 20px auto 0px auto;
      }

      .has-background-white table {
        border: 0 !important;
      }

      .twitter-share-button{
        float: left;
      }

      .farleft {
        float: right;
      }

.hide{
    visibility: hidden;
}

button{
    margin: 0px auto; 
    text-align:center; 
}


.center {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    </style>
  </head>

  <body>
    <div class="center">
      <figure class="image center">
        <img src="/images/yourjournal_logo.png" style="max-width: 650px;" />
      </figure>
    </div>

    <div class="hero-head has-background-success has-text-white">
      <div class="columns is-mobile is-marginless">
                  <div class="column center">
                        <i class="fas fa-2x fa-home"></i>&nbsp;&nbsp;<p><a href="/home">Home</p></a>
        </div>
        <div class="column center">
            <i class="fas fa-2x fa-door-open"></i>&nbsp;&nbsp;<p><a href="https://jurnalfy.herokuapp.com/">Log Out</p></a>
        </div>
      </div>
    </div>

   
    <section class="section">
      <div class="container">
        <%Journal.forEach((Journal, i=1)=>{ %>
        <div class="columns">
          <div class="column">
            <article
              class="media notification has-background-grey-lighter has-text-dark"
            >
              <figure class="media-left">
                <span class="icon is-large">
                  <i class="fas fa-2x fa-book-open"></i>
                </span>
              </figure>
              <div class="media-content">

                <div class="content">
                    <div class ="parent">
                      <div class = "child1">
                  <div class="grandchild">
                  <h3><%=Journal.date%> - Entry <%=i+1%></h3></div>
               <div class="grandchild"><h6>   Location: <%=Journal.location%> <span class="icon is-small is-left">
                  <i class="fas fa-map-pin"></i>
                </span></h6></div>
                </div>
                <div class="child2">
                  <iframe
        width="200"
        height="100"
        frameborder="0"
        style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDmTIWwGfLRXZPhBlKCix0wcqMDv_hYY3E
&q=<%=Journal.location%>"
        allowfullscreen
      >
      </iframe>
    </div>
    </div>

                  <table class="has-background-white" id="tblexportData">
                    <tr>
                      <td>
                        Thought:<br />
                        <br />
                        <%=Journal.thought%>
                      </td>
                    </tr>
                    <tr><td >Date: <%=Journal.date%></td></tr>
                    <tr><td >Location: <%=Journal.location%></td></tr>
                  </table>
                  
                  <i class="fas fa-edit"></i
                  ><a href="/<%=Journal._id%>">View Entry</a>
                  <br />
                  <br />
                  <a
                    href="https://twitter.com/share"
                    class="twitter-share-button"
                    data-lang="en"
                    data-text="<%=Journal.thought%>"
                    >Tweet</a
                  >
                </div>
              </div>
            </article>
            <%})%>
          </div>
        </div>
        <div class="center">
        <input class="button is-success" type="button" id="btnExport" value="Export To PDF" onclick="Export()" /></div>
        <script type="text/javascript" src="js/app.js"></script>
      </div>
    </section>


  </body>
</html>
