<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>jurnalfy</title>
    <script
      async
      src="https://platform.twitter.com/widgets.js"
      charset="utf-8"
    ></script>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="styles/helpers.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.0/css/bulma.min.css"
    />
    <script src="https://www.jsdelivr.com/package/npm/bulma"></script>
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
    <!-- <link rel="stylesheet" href="css/debug.css" /> -->
    <style>
      @import url("https://fonts.googleapis.com/css?family=Roboto:400,500,700,900&display=swap");

      h1 {
        font-family: "Roboto", sans-serif;
      }

      .center {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .parent {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .child1, .child2 {
        width: 50%
      }


      .has-text-dark {
        font-family: "Roboto", sans-serif;
        font-weight: 600;
      }

      iframe {
        float: right; 
      }

      .hero-head {
        font-family: "Roboto", sans-serif;
        font-weight: 600;
        font-size: 18px;
        margin: 10px auto -10px auto;
        width: 85%
      }

      .hero-head a{
        color: white; 
      }

      img {
        margin: 20px auto 0px auto;
        height: 100px; 
        width: 100px; 
      }

      .has-background-white table {
        border: 0 !important;
      }

      .twitter-share-button{
        float: left;
      }

      .farleft {
        float: right;
      }

      .view{
        font-size: 20px;
        text-decoration: none;
      }

     button {
        text-decoration: none;
        font-weight: 700;
      }

      a{
        text-decoration: none !important
      }

      @media only screen and (max-width: 480px) {

        body{
          width: 95%;
          margin: 0px auto; 
        }
        img
        {  
          display: block; 
         width: 100px;
        height: 100px; 
        }

        .hero-head {
        font-family: "Roboto", sans-serif;
        font-weight: 600;
        font-size: 12px;
        margin: 10px auto -10px auto;
        width: 100%
      }

  .section{
        width: 100%;
        padding: 0px !important;
      }

      .media-left,iframe{
        display: none;
      }
      .parent {
        display: flex;
        flex-wrap: wrap; 
        justify-content: center;
        align-items: center;
      }

      .child1, .child2 {
        width: 100%
      }

      .view {
        margin: 10px 0px 0px 0px; 
        font-size: 20px;
        display: block; 
        text-align: center;
      }

      .fa-edit{
        display: none;
      }
      
      h3, h6 {
        text-align: center;
      }

      .farleft{
        float: left; 
      }

} 




    </style>
  </head>

  <body>
    <div class="center">
      <figure class="image center">
        <img src="/images/yourjournal_logo.png" style="max-width: 650px;" />
      </figure>
    </div>

    <div class="hero-head has-background-success has-text-white">
      <div class="columns is-mobile is-marginless">
          <div class="column center">
              <i class="fas fa-2x fa-search"></i>&nbsp;&nbsp; <p><a href="/search">search</a></p>
        </div>
        <div class="column center">
            <i class="fas fa-2x fa-pen-fancy"></i>&nbsp;&nbsp; <p><a href="/newThought">Add Entry</a></p>
        </div>
        <div class="column center">
            <i class="fas fa-2x fa-door-open"></i>&nbsp;&nbsp;<p><a href="https://jurnalfy.herokuapp.com/">Log Out</p></a>
        </div>
      </div>
    </div>

   
    <section class="section">
      <div class="container">
        <%Journal.forEach((Journal, i=1)=>{ %>
        <div class="columns">
          <div class="column">
            <article
              class="media notification has-background-grey-lighter has-text-dark"
            >
              <figure class="media-left">
                <span class="icon is-large">
                  <i class="fas fa-2x fa-book-open"></i>
                </span>
              </figure>
              <div class="media-content">

                <div class="content">
                    <div class ="parent">
                      <div class = "child1">
                  <div class="grandchild">
                  <h3><%=Journal.date%> - Entry <%=i+1%></h3></div>
               <div class="grandchild"><h6>   Location: <%=Journal.location%> <span class="icon is-small is-left">
                  <i class="fas fa-map-pin"></i>
                </span></h6></div>
                </div>

                <div class="child2">
                  <iframe
        width="200"
        height="100"
        frameborder="0"
        style="border:0"
        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDmTIWwGfLRXZPhBlKCix0wcqMDv_hYY3E
&q=<%=Journal.location%>"
        allowfullscreen
      >
      </iframe>
    </div>
    </div>

                  <table class="has-background-white">
                    <tr>
                      <td>
                        Thought:<br />
                        <br />
                        <%=Journal.thought%>
                      </td>
                    </tr>
                    <th class="farleft">Destination: <%=Journal.destination%></th>
                  </table>


                  <a class="view" href="/<%=Journal._id%>"><button class="button is-success">View Entry</button></a>
                  <br />
                  <br />
                  <a
                    href="https://twitter.com/share"
                    class="twitter-share-button"
                    data-lang="en"
                    data-text="<%=Journal.thought%>"
                    >Tweet</a
                  >
                </div>
              </div>
            </article>
            <%})%>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
