<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>jurnalfy</title>
    <script
      async
      src="https://platform.twitter.com/widgets.js"
      charset="utf-8"
    ></script>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="styles/helpers.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.0/css/bulma.min.css"
    />
    <script src="https://www.jsdelivr.com/package/npm/bulma"></script>
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
    <!-- <link rel="stylesheet" href="css/debug.css" /> -->
    <style>
      @import url("https://fonts.googleapis.com/css?family=Roboto:400,500,700,900&display=swap");

      h1 {
        font-family: "Roboto", sans-serif;
      }



      .center {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .has-text-dark {
        font-family: "Roboto", sans-serif;
        font-weight: 600;
      }

      .hero-head {
        font-family: "Roboto", sans-serif;
        font-weight: 600;
        font-size: 18px;
        margin: 10px 0px -10px 0px;
      }

      .hero-head a{
        color: white; 
      }

      img {
        margin: 20px auto 0px auto;
      }

      .has-background-white table {
        border: 0 !important;
      }

      .farleft {
        float: right;
      }
    </style>
  </head>

  <body>
    <div class="center">
      <figure class="image center">
        <img src="/images/yourjournal_logo.png" style="max-width: 650px;" />
      </figure>
    </div>

    <div class="hero-head has-background-success has-text-white">
      <div class="columns is-mobile is-marginless">
        <div class="column center">
            <i class="fas fa-2x fa-search"></i> &nbsp; &nbsp;<p> Search Entries</p>
        </div>
        <div class="column center">
            <i class="fas fa-2x fa-pen-fancy"></i>&nbsp;&nbsp; <p><a href="/newThought"> Add Entry</a></p>
        </div>
        <div class="column center">
            <i class="fas fa-2x fa-door-open"></i>&nbsp;&nbsp;<p><a href="http://localhost:3000">Log Out</p></a>
        </div>
      </div>
    </div>

   
    <section class="section">
      <div class="container">
        <%Journal.forEach((Journal, i=1)=>{ %>
        <div class="columns">
          <div class="column">
            <article
              class="media notification has-background-grey-lighter has-text-dark"
            >
              <figure class="media-left">
                <span class="icon is-large">
                  <i class="fas fa-2x fa-book-open"></i>
                </span>
              </figure>
              <div class="media-content">
                <div class="content">
                  <h3><%=Journal.date%> - Entry <%=i+1%></h3>

                  <table class="has-background-white">
                    <tr>
                      <td>
                        Thought:<br />
                        <br />
                        <%=Journal.thought%>
                      </td>
                    </tr>
                    <th class="farleft">Category: <%=Journal.category%></th>
                  </table>

                  <i class="fas fa-edit"></i
                  ><a href="/<%=Journal._id%>">Edit Entry</a>
                  <br />
                  <br />
                  <a
                    href="https://twitter.com/share"
                    class="twitter-share-button"
                    data-lang="en"
                    data-text="<%=Journal.thought%>"
                    >Tweet</a
                  >
                </div>
              </div>
            </article>
            <%})%>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
